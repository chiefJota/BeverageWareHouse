<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="355dp"
        android:text="Price: " />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price"
        android:layout_marginBottom="23dp"
        android:text="Description:" />

    <TextView
        android:id="@+id/alcohol_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_marginBottom="5dp"
        android:text="Alcohol Type:" />

    <TextView
        android:id="@+id/alcohol_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alcohol_type"
        android:layout_marginBottom="3dp"
        android:text="Alcohol Content:" />

    <TextView
        android:id="@+id/manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alcohol_content"
        android:layout_marginBottom="3dp"
        android:text="Origin and Manufacturer: " />

    <ImageView
        android:id="@+id/alcohol_image"
        android:layout_width="298dp"
        android:layout_height="103dp"
        android:layout_above="@+id/manufacturer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginBottom="31dp"
        android:src="@drawable/heady_topper" />
</RelativeLayout>